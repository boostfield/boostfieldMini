.container {
  background: #f6f6f6;
  margin-right: 40rpx;
  margin-left: 40rpx;
}

.cover {
  width: 100%;
  height: 260rpx;
}

.item {
  width: 100%;
  height: 154rpx;
  background: #fff;
  margin-top: 40rpx;
  position: relative;
}

.item-address {
  width: 100%;
  height: 204rpx;
  background: #fff;
  margin-top: 40rpx;
  position: relative;
}

.line-1 {
  height: 100%;
  width: 12rpx;
  background: #5690ec;
}

.line-2 {
  height: 100%;
  width: 12rpx;
  background: #61c9f4;
}

.line-3 {
  height: 100%;
  width: 12rpx;
  background: #6169f4;
}

.icon {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 40rpx;
}

.left {
  margin-left: 40rpx;
}

.title {
  color: #999;
  font-size: 28rpx;
}

.subtitle {
  color: #6173f4;
  font-size: 36rpx;
  font-weight: 400;
}

.width {
  width: 70%;
}

.share-image {
  width: 152rpx;
  height: 152rpx;
  position: fixed;
  right: 0;
  bottom: 0;
  z-index: 10;
}

.dialog {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1000;
}

button::after {
  border: none;
}

.share_btn {
  width: 100%;
  position: fixed;
  bottom: 0;
  border-radius: 0;
}
