.container {
  background-color: #fff;
  padding: 0;
  font-family: HelveticaNeue, PingFang SC, Microsoft YaHei;
}

.container-padding {
  padding: 0 20rpx;
}

.top {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #2b3e5a;
  padding: 100rpx 0;
  width: inherit;
}

.image-item1 {
  height: 400rpx;
}

.image-item2 {
  height: 300rpx;
}

.gap {
  background-color: #f7f9fa;
  height: 60rpx;
  margin: 0 -20rpx;
}
.highlight {
  color: #6173f4 !important;
}

.swiper {
  height: 450rpx;
}

.swiper-img {
  width: 100%;
  height: 100%;
}

.swiper-item {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper-text {
  position: absolute;
}

.swiper-title {
  font-weight: bold;
  margin-left: 20rpx;
}

.swiper-subtitle {
  margin-left: 20rpx;
}

.service {
  padding-top: 100rpx;
  padding-bottom: 100rpx;
}

.service-img {
  width: 260rpx;
  height: 260rpx;
  margin-top: 80rpx;
}

.service-item {
  padding: 0 30rpx;
}

.service-title-icon {
  background-color: #4e58f1;
  width: 8rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.service-subtitle {
  font-weight: bold;
  margin-top: 30rpx;
}

.service-desc {
  margin-top: 20rpx;
  text-align: center;
}

.partner {
  background-color: #f7f9fa;
  padding-top: 200rpx;
  padding-bottom: 150rpx;
}

.partner-title {
  color: #606060;
  text-align: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 100rpx;
}

.partner-img {
  height: 200rpx;
  margin: 40rpx 0;
}

.footer {
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 100rpx;
}

.footer-logo {
  width: 350rpx;
  margin: 50rpx 0;
}

.footer-title {
  color: #5a6479;
  margin: 40rpx 0;
}

.footer-subtitle {
  color: #8b93a4;
  margin-top: 10rpx;
}

.footer-qrcode {
  width: 250rpx;
}
